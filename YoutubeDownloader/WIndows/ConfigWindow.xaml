<Window x:Class="YoutubeDownloader.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoutubeDownloader"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="ConfigWindow" Height="220.588" Width="465.5">
    <Grid>
        <Button x:Name="btnBrowse" Content="Browse" HorizontalAlignment="Right" Margin="0,34,10,0" VerticalAlignment="Top" Width="75" Height="23" Click="BtnBrowse_Click"/>
        <TextBox x:Name="tbSavePath" Height="23" Margin="10,34,90,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Padding="0" VerticalContentAlignment="Center" FontSize="11"/>
        <Label Content="Save path" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="19" Padding="0"/>
        <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="BtnSave_Click"/>
    </Grid>
</Window>
